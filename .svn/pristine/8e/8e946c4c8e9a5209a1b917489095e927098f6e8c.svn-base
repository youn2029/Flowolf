<!-- 화상채팅 layer pop up : s -->
<div class="dim-layer">
	<div class="dimBg"></div>
		
	<div id="faceChatPop" class="pop-layer">
	
   		<!-- pop header -->
   		<header class="pop-top border-box text-center">
   			<a href="#" class="posi-ab dis-block over-hidden icon-close btn-close">close</a>
   			<strong class="dis-block size-28 color-black text-center">화상회의</strong>
   		</header>
   		
		<!-- pop con -->
   		<section class="pop-con border-box">
   			<p>프로젝트 참여자간 화상희의를 할 수 있습니다.</p>
   			<div class="face-chat-btn">
	   			<a class="face-chat-make color-white back-color-pupple-l cursor-point">만들기</a>
	   			<a class="face-chat-room color-white back-color-pupple-l cursor-point">참여하기</a>
   			</div>
   		</section>
		<script type="text/javascript">
		$(function(){
			
			var ip = "${ip}";
			var ipRoom;
			// 화상회의 만들기
			$(".face-chat-make").on("click", function(){
				
				var pro_no = ${proVo.pro_no };
				
				$.ajax({
					url : "/faceChat/faceChatMake",
					method : "POST",
					dataType : "json", // server로 부터 받을 data type
					data : {fc_ip:ip, pro_no:pro_no},
					success : function(data) {
						alert("success");
						$(".face-chat-make").css("display","none");
						ipRoom = data.ip;
					},
					error : function(error) {
						alert("error");
					}
				});
				
				window.open("https://" + ip + ":8443/faceChat/faceChat?ip="+ip, "faceChat", "width=1000,height=1000,top=100,left=100");
				
			});
			
			// 화상회의 참여하기
			$(".face-chat-room").on("click", function(){
				window.open("https://" + ipRoom + ":8443/faceChat/faceChatRoom?ipRoom="+ipRoom, "faceChat", "width=1000,height=1000,top=100,left=100");
			});
		});
		</script>
	</div>

</div>
<!-- 화상채팅 layer pop up : f -->

