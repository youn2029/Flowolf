<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="vote">

	<!-- 투표 시퀸스 조회 -->
	<select id="getVoteSeq" resultType="int">
		SELECT vote_no_seq.nextval
		  FROM DUAL
	</select>

	<!-- 투표글 등록 -->
	<insert id="insertVote" parameterType="voteVo">
		INSERT INTO vote (vote_no, vote_title, vote_time, vote_del_chk, vote_fix_chk, pro_no, mem_id, vote_end_time)
			VALUES (#{vote_no}, #{vote_title}, sysdate, 'n', 'n', #{pro_no}, #{mem_id}, #{vote_end_time})
	</insert>
	
	<!-- 투표글 수정 -->
	<update id="updateVote" parameterType="voteVo">
		UPDATE vote
		SET vote_title = #{vote_title}
		  , vote_fix_chk = #{vote_fix_chk}
		  , vote_fix_date = sysdate
		  , vote_end_time = #{vote_end_time}
	  WHERE vote_no = #{vote_no}
	</update>
	
	<!-- 투표글 삭제처리 -->
	<update id="deleteVote" parameterType="int">
		UPDATE vote
		   SET vote_del_chk = 'y'
		 WHERE vote_no = #{vote_no}
	</update>
	
	<!-- 투표글 상세조회 -->
	<select id="getVoteDetail" parameterType="int" resultType="voteVo">
		SELECT v.*
			 , (SELECT mem_nick 
				  FROM member m 
				 WHERE m.mem_id = v.mem_id) AS mem_nick
		  FROM vote v
		 WHERE v.vote_no = #{vote_no}
	</select>
	
	<!-- 프로젝트의 투표글 조회 -->
	<select id="getVoteProList" parameterType="map" resultType="voteVo">
		SELECT v.*
			 , (SELECT mem_nick 
				  FROM member m 
				 WHERE m.mem_id = v.mem_id) AS mem_nick
			 , (SELECT co.coll_no
		          FROM collection co
		         WHERE co.vote_no = v.vote_no
		           AND co.mem_id = #{mem_id}) AS coll_chk
		  FROM vote v
		 WHERE v.pro_no = #{pro_no}
		   AND v.vote_del_chk = 'n'
	</select>
	
	<!-- 투표글 검색 조회 -->
	<select id="getVoteSearchList" parameterType="map" resultType="voteVo">
		SELECT v.*
			 , (SELECT mem_nick 
				  FROM member m 
				 WHERE m.mem_id = v.mem_id) AS mem_nick
		  FROM vote v
		 WHERE ${searchField} like '%'||#{searchData}||'%'
		   AND v.vote_del_chk = 'n'
	</select>
	
	<!-- 회원의 담아둔 투표글 리스트 조회 -->
	<select id="getVoteCollList" parameterType="String" resultType="voteVo">
		SELECT v.*
		     , (SELECT mem_nick
	              FROM member m
	             WHERE m.mem_id = v.mem_id) AS mem_nick
			 , c.coll_no AS coll_chk
			 , (SELECT pro_name
			 	  FROM project p
			 	 WHERE p.pro_no = v.pro_no) AS pro_name
		  FROM vote v
			 , (SELECT * 
			 	FROM collection 
			 	WHERE mem_id = #{mem_id}) c
		 WHERE v.vote_no = c.vote_no
		   AND v.vote_del_chk = 'n'
	</select>
	
	<!-- 회원이 작성한 투표글 리스트 조회 -->
	<select id="getMyVoteList" parameterType="String" resultType="voteVo">
		SELECT v.*
			 , (SELECT mem_nick
				  FROM member m
				 WHERE m.mem_id = v.mem_id) AS mem_nick
			 , (SELECT co.coll_no
		          FROM collection co
		       	 WHERE co.vote_no = v.vote_no
		           AND co.mem_id = v.mem_id) AS coll_chk
		     , (SELECT pro_name
			 	  FROM project p
			 	 WHERE p.pro_no = v.pro_no) AS pro_name
		  FROM vote v
		 WHERE v.mem_id = #{mem_id}
		   AND v.vote_del_chk = 'n'
	</select>
</mapper>