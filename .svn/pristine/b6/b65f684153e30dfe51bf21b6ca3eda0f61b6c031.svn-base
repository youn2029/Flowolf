<%@ page language="java" contentType="text/html; charset=UTF-8"
    pageEncoding="UTF-8"%>
<style>
/* member edit box */
.mem-edit-box {display:block;float:left;width:100%;padding:30px;background-color:#fff}
.mem-edit-box dl,
.mem-edit-box dl dt,
.mem-edit-box dl dd {float:left}
.mem-edit-box dl {width:100%;margin:0}
.mem-edit-box dl dt {width:150px;margin-right:50px}
.mem-edit-box dl dd {
	position:relative;
	width:-webkit-calc(100% - 200px);
	width:-moz-calc(100% - 200px);
	width:-o-calc(100% - 200px);
	width:calc(100% - 200px);
}
.mem-edit-box dl dd table {float:left;width:100%;margin:0}
.mem-edit-box dl dd table tr td {height:50px;padding:0;line-height:50px;border:0}
.mem-edit-box dl dd table tr td:first-child {font-weight:300;color:#676767}
.mem-edit-box dl dd table tr td input {height:36px;margin-top:8px;padding:0 10px;line-height:36px;border:1px solid #ddd}
.mem-edit-box dl dd table tr td input.active {border:1px solid #ccc;border-radius:5px}
.mem-edit-box dl dd input.mem-edit-save {width:54px;height:30px;line-height:30px;text-align:center}
</style>

<section class="content main">
	<strong class="dis-inblock size-30 color-black">환경설정</strong>
	
	<!-- member edit : s -->
	<div class="mem-edit-box martop-20">
		<dl>
			<dt class="posi-re">
				<i class="icon-circle circle-b"></i>
				<img src="" onerror="this.src='/image/user-pic-sample.png'" width="150">
			</dt>
			<dd>
				<form action="">
					<table class="table">
						<colgroup>
							<col width="25%"><col width="75%">
						</colgroup>
						<tr>
							<td>아이디</td>
							<td>
								<input type="text" id="mem_id" readonly>
							</td>
						</tr>
						<tr>
							<td>비밀번호</td>
							<td>
								<input type="password" id="mem_pw" class="mem_pw" value="" readonly>
							</td>
						</tr>
						<tr>
							<td>이름</td>
							<td>
								<input type="text" id="mem_name" readonly>
							</td>
						</tr>
						<tr>
							<td>닉네임</td>
							<td>
								<input type="text" id="mem_nick" readonly>
							</td>
						</tr>
						<tr>
							<td>가입일</td>
							<td id="mem_date" style="padding:0 10px"></td>
						</tr>
						<tr>
							<td>휴대폰번호</td>
							<td>
								<input type="text" id="mem_phone" readonly>
							</td>
						</tr>
						<tr>
							<td>가입방법</td>
							<td id="mem_howjoin" style="padding:0 10px"></td>
						</tr>
						<tr>
							<td>활성화유무</td>
							<td id="mem_chk" style="padding:0 10px"></td>
						</tr>
					</table>
					
					<input type="submit" value="저장" class="mem-edit-save color-white back-color-blue-l"><!-- submit 버튼 -->
				</form>
			</dd>
		</dl>
	</div>
	<!-- member edit : f -->
	
</section>