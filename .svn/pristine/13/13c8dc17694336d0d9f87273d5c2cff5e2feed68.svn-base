@charset "utf-8";

/*******************************************
* FLOWOLF ADMIN Custom Style
* 팀명 : #DEV
* 최초작성일 : 2018-09-18
* 작성자 : UA(Kim ji su)
*******************************************/

.admin-body-wrap .col-md-2 {padding:0}
.admin-body-wrap .col-md-10 {padding:0 30px}


/*******************************************
*
* Note : head top
*
*******************************************/
header.admin-head-top {display:block;width:100%;height:50px;background-color:#3F51B5}
header.admin-head-top .admin-logo {height:50px;padding:0 20px;font-size:20px;color:#fff;line-height:50px;text-align:center}

/* top navigation */
ul.admin-top-nav {margin:0}
ul.admin-top-nav > li {float:left;height:50px;margin-left:15px;line-height:50px}
ul.admin-top-nav > li:first-child {margin-left:0}
ul.admin-top-nav > li .manager-info-btn {
	height:34px;
	margin-top:8px;
	padding:5px 15px;
	line-height:24px;
	background-color:#5969C3;
	border-radius:5px
}

/* top toggle box(manager info box) */
ul.admin-top-nav li .manager-info-box {left:inherit;right:0;width:200px;padding:20px}
ul.admin-top-nav li .manager-info-btn img {vertical-align:top}

ul.admin-top-nav li .manager-info-box .manager-info-photo {width:60px;margin:0 auto}

ul.admin-top-nav li .manager-info-box ul.manager-info-id li {width:100%;height:20px;line-height:20px}
ul.admin-top-nav li .manager-info-box ul.manager-info-id li:hover {background-color:transparent}

ul.admin-top-nav li .manager-info-box ul.manager-info-nav li {height:20px;margin-top:5px}
ul.admin-top-nav li .manager-info-box ul.manager-info-nav li:first-child {margin-top:0}
ul.admin-top-nav li .manager-info-box ul.manager-info-nav li a {display:block;height:20px;font-size:12px;color:#999;line-height:20px}
ul.admin-top-nav li .manager-info-box ul.manager-info-nav li:hover,
ul.admin-top-nav li .manager-info-box ul.manager-info-nav li a:hover {color:#333;background-color:transparent}
ul.admin-top-nav li .manager-info-box ul.manager-info-nav li .icon-gear {width:14px;height:20px;background-position:0 -296px}
ul.admin-top-nav li .manager-info-box ul.manager-info-nav li .icon-out {width:14px;height:20px;background-position:-100px -296px}


/*******************************************
*
* Note : aside
*
*******************************************/
.admin-aside {height:100vh;min-height:100%;background-color:#fff}
.admin-aside nav,
.admin-aside nav ul,
.admin-aside nav ul li {width:100%}
.admin-aside nav {min-height:100%;padding:30px 0}

/* 1st section */
.admin-aside nav > ul > li > a {
	position:relative;
	display:block;
	height:50px;
	padding:0 30px;
	font-size:16px;
	color:#484848;
	line-height:50px;
	text-decoration:none
}
.admin-aside nav > ul > li > a:hover {background-color:#f1f2f3}
.admin-aside nav > ul > li > a[aria-expanded="true"] {background-color:#ddd}
.admin-aside nav > ul > li > a > i.fa-caret-down {position:absolute;right:30px;top:17px}

/* 2nd section */
.admin-aside nav > ul > li > ul.admin-sub-nav li a {
	position:relative;
	display:block;
	height:40px;
	padding-left:60px;
	font-size:14px;
	color:#676767;
	line-height:40px;
	background-color:#eee
}
.admin-aside nav > ul > li > ul.admin-sub-nav li a:hover {background-color:#f1f2f3}
.admin-aside nav > ul > li > ul.admin-sub-nav li a::after {
	content:'';
	position:absolute;
	left:30px;
	top:0;
	bottom:0;
	border-left:1px solid #ccc
}
.admin-aside nav > ul > li > ul.admin-sub-nav li a::before {
	content:'';
	position:absolute;
	left:26px;
	top:15px;
	width:10px;
	height:10px;
	background-color:#ccc;
	border-radius:50%
}

/*******************************************
*
* Note : admin contents
*
*******************************************/
.col-md-10.admin-con-wrap {padding:40px 30px}
.col-md-10.admin-con-wrap .admin-content {float:left;width:100%;padding:30px;letter-spacing:0;background-color:#fff}

/* member edit box */
.mem-edit-box {display:none}
.mem-edit-box dl,
.mem-edit-box dl dt,
.mem-edit-box dl dd {float:left}
.mem-edit-box dl {width:100%;margin:0}
.mem-edit-box dl dt {width:150px;margin-right:50px}
.mem-edit-box dl dd {
	position:relative;
	width:-webkit-calc(100% - 200px);
	width:-moz-calc(100% - 200px);
	width:-o-calc(100% - 200px);
	width:calc(100% - 200px);
}
.mem-edit-box dl dd table {float:left;width:44%;margin:0}
.mem-edit-box dl dd table tr td {height:50px;padding:0;line-height:50px;border:0}
.mem-edit-box dl dd table tr td:first-child {font-weight:300;color:#676767}
.mem-edit-box dl dd table tr td input {height:36px;margin-top:8px;padding:0 10px;line-height:36px;border:0}
.mem-edit-box dl dd table tr td input.active {border:1px solid #ccc;border-radius:5px}

.mem-edit-box dl dd i.mem-edit-btn,
.mem-edit-box dl dd i.mem-edit-close {position:absolute;top:0;font-size:20px;color:#ccc}
.mem-edit-box dl dd i.mem-edit-btn:hover,
.mem-edit-box dl dd i.mem-edit-close:hover {color:#676767}
.mem-edit-box dl dd i.mem-edit-btn {right:30px}
.mem-edit-box dl dd i.mem-edit-close {right:0px}
.mem-edit-box dl dd input.mem-edit-save {display:none;position:absolute;right:0;bottom:0;width:54px;height:30px;line-height:30px;text-align:center}


/* member list box */
.mem-list-box table {margin:0}
.mem-list-box table thead td {font-weight:bold}
.mem-list-box table tbody tr {cursor:pointer}
.mem-list-box table tbody tr td {color:#444}


































