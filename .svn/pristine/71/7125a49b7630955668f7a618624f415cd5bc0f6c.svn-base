/* common top */

.top-wrap {
	height:50px;
	padding:0 15px;
	border-bottom: 1px solid #d1d1d1;
}
.top-wrap ul {height:50px;margin:0}

/* chat-drop-left : tab menu */
.top-wrap ul.chat-drop-left li {
	float:left;
	min-width:40px;
	height:50px;
	margin:0;
	padding:0 15px;
	line-height:50px;
	text-align:center;
	border-bottom:3px solid transparent;
	cursor:pointer
}

.top-wrap ul.chat-drop-left li.active {border-color:#5750c1}

/* chat-drop-right : other menu */
.top-wrap ul.chat-drop-right li {
	float:left;
	height:50px;
	margin-left:10px;
	padding-top:12px;
	line-height:50px
}
.top-wrap ul.chat-drop-right li:first-child {margin-left:0}
.top-wrap ul.chat-drop-right li .chat-alim-btn {
	diplay:block;
	height:26px;
	padding:0 10px;
	font-size:13px;
	color:#333;
	line-height:26px;
	border:1px solid #ddd;
	border-radius:20px;
	cursor:pointer;
}
.top-wrap ul.chat-drop-right li i.icon-chat-plus {
	display:block;
	overflow:hidden;
	width:31px;
	height:26px;
	background-position:-200px -400px
}

/* tab contents */
.chat-tab-content {display:none}
.chat-tab-content.active {display:inherit}



