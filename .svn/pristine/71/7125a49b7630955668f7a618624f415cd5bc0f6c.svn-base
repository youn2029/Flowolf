input[type="checkbox"]:not(:checked) + label:after,
input[type="checkbox"]:checked + label:after {
	content: '✔';
	position: absolute;
	top: 3px;
	left: 4px;
	font-size: 1em;
	line-height: 0.8;
	color: #2b3991;
	transition: all .2s;
}

/* checked mark aspect changes */
input[type="checkbox"]:not(:checked) + .crateChatLabel:after {
  opacity: 0;
  transform: scale(0);
}

input[type="checkbox"]:checked + .crateChatLabel:after {
  opacity: 1;
  transform: scale(1);
}

input[type="checkbox"]:checked + .crateChatLabel {
	border: 1px solid #2b3991;
}

.crateChatLabel {
	position: relative;
	float: right;
	margin-top: -27px;
	border-radius: 20px;
	width: 20px;
	height: 20px;
	border: 1px solid #bebebe;
}



